+#include "gba/gba.h"
+#include "mgba.h"
+#include <stdarg.h>
+#include <stdio.h>
+
+#define REG_DEBUG_ENABLE  (*(vu16 *)0x4FFF780)
+#define REG_DEBUG_FLAGS   (*(vu16 *)0x4FFF700)
+#define REG_DEBUG_STRING  ((char *)0x4FFF600)
+
+void MgbaOpen(void) {
+    REG_DEBUG_ENABLE = 0xC0DE;
+}
+
+int MgbaPrintf(enum MgbaLogLevel level, const char *fmt, ...) {
+    if (!REG_DEBUG_ENABLE)
+        return 0;
+
+    va_list args;
+    va_start(args, fmt);
+    int ret = vsnprintf(REG_DEBUG_STRING, 256, fmt, args);
+    va_end(args);
+
+    REG_DEBUG_FLAGS = (1 << level);
+    return ret;
+}
